<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorPrimaryLight</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Theme.AppCompat.Light is not a dialog theme -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/header_title_text</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ListTitle">
        <item name="android:layout_marginBottom">@dimen/card_title_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/list_space</item>
    </style>

    <style name="xsTitle">
        <item name="android:textSize">@dimen/list_status_text</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="sTitle" parent="ListTitle">
        <item name="android:textSize">@dimen/list_desc_text</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="lTitle" parent="ListTitle">
        <item name="android:textSize">@dimen/card_title_text</item>
        <item name="android:fontFamily">@font/poppins_extrabold</item>
    </style>

    <style name="mdTitle" parent="ListTitle">
        <item name="android:textSize">@dimen/card_subtitle_text</item>
        <item name="android:fontFamily">@font/poppins_extrabold</item>
    </style>

    <style name="mdContent">
        <item name="android:textSize">@dimen/card_title_text</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CommonButton">
        <item name="android:padding">@dimen/input_text_padding</item>
        <item name="android:textSize">@dimen/list_subtitle_text</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/container_padding_x"
        android:paddingTop="@dimen/container_padding_y"
        android:layout_above="@id/v_gudieline">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="row">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Lengkap"
                    style="@style/mdTitle"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/tv_registration_detail_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Namamu"
                    style="@style/mdContent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelas"
                    style="@style/mdTitle"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/tv_order_detail_kelas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TK-B"
                    style="@style/mdContent"/>
            </LinearLayout>
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="row">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    style="@style/mdTitle"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/tv_order_detail_alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jalan Terserah"
                    style="@style/mdContent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No. Handphone"
                    style="@style/mdTitle"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/tv_order_detail_nohp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="089112345678"
                    style="@style/mdContent"/>
            </LinearLayout>
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="row">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah"
                    style="@style/mdTitle"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/tv_order_detail_jumlah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    style="@style/mdContent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Harga"
                    style="@style/mdTitle"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/tv_order_detail_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 12313"
                    style="@style/mdContent"/>
            </LinearLayout>
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="row"
            app:justifyContent="space_between"
            android:layout_marginTop="@dimen/list_space"
            android:layout_marginBottom="@dimen/card_title_margin_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar Pesananan"
                style="@style/mdTitle"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:textColor="@color/colorPrimary"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_order_detail_acc_all"
                    android:layout_width="@dimen/card_title_ic_size"
                    android:layout_height="@dimen/card_title_ic_size"
                    android:src="@drawable/ic_checkbox_check_inact"
                    android:layout_marginEnd="@dimen/container_padding_x"/>

                <ImageView
                    android:id="@+id/iv_order_detail_reject_all"
                    android:layout_width="@dimen/card_title_ic_size"
                    android:layout_height="@dimen/card_title_ic_size"
                    android:src="@drawable/ic_checkbox_cross_inact"
                    android:layout_marginEnd="@dimen/container_padding_x"/>
            </LinearLayout>
        </com.google.android.flexbox.FlexboxLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/colorPrimary"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_oreder_detail_daftar_pesanan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_order_detail"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <View
        android:id="@+id/v_gudieline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/cv_order_detail"
        android:background="@android:color/darker_gray" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="28dp"
        app:cardCornerRadius="@dimen/list_corner"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ListTitle"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/container_padding_x"
            android:layout_marginBottom="@dimen/container_padding_y">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_order_detail_batal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:layout_marginEnd="@dimen/container_padding_x"
                app:cardCornerRadius="@dimen/list_corner"
                app:cardBackgroundColor="@color/colorUnSelect">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/container_padding_x"
                    android:text="Balat"
                    android:textColor="@android:color/white"
                    style="@style/CommonButton"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_order_detail_simpan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/list_corner"
                app:cardBackgroundColor="@color/colorPrimary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/container_padding_x"
                    android:text="Konfirmasi"
                    android:textColor="@android:color/white"
                    style="@style/CommonButton"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/list_corner"
    android:layout_marginVertical="@dimen/input_text_padding">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexDirection="row"
        android:padding="@dimen/appbar_padding_top"
        app:alignItems="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_flexGrow="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_uniform_size_ukuran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ukuran: "
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/card_desc_text"/>

            <TextView
                android:id="@+id/tv_item_uniform_size_jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah: "
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/card_desc_text"/>

            <TextView
                android:id="@+id/tv_item_uniform_size_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga: "
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/card_desc_text"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_item_uniform_size_hapus"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_delete"
            android:foregroundGravity="center"
            android:layout_marginStart="@dimen/list_corner"/>
    </com.google.android.flexbox.FlexboxLayout>
</com.google.android.material.card.MaterialCardView>
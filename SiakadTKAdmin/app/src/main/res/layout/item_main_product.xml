<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_list_tower"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_space">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/list_corner"
        card_view:cardElevation="@dimen/cardview_default_elevation"
        card_view:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/container_padding_x">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="@dimen/list_corner"
                card_view:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv_item_main_product_img"
                    android:layout_width="@dimen/list_grid_image"
                    android:layout_height="@dimen/list_grid_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/vc_bg_pengumuman"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_item_main_product_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:text="@string/product_xxx"
                android:textSize="@dimen/card_title_text"
                android:fontFamily="@font/poppins_bold"/>

            <TextView
                android:id="@+id/tv_item_product_stok"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/product_xxx"
                android:textSize="@dimen/card_desc_text"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="123dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_appbar_dashboard"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/list_space"
            android:layout_marginStart="@dimen/container_padding_x"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="16dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_menu"
                android:layout_marginEnd="@dimen/list_space"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_dashboard"
                android:textSize="@dimen/header_title_text"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_semibold"/>
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/container_padding_y"
        android:paddingHorizontal="@dimen/container_padding_x">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengumuman dan Notifikasi"
                android:textSize="@dimen/card_title_text"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="8dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:src="@drawable/img_announcement_card_dashboard"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_notifications_black_24dp"
                        app:tint="@android:color/white"
                        android:layout_marginEnd="@dimen/container_padding_x"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/tv_dashboard_jumlah_pengumuman"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jumlah Pengumuman:"
                            android:fontFamily="@font/poppins_extrabold"
                            android:textSize="@dimen/list_subtitle_text"
                            android:textColor="@color/colorProcess"/>

                        <TextView
                            android:id="@+id/tv_dashboard_jumlah_notifikasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jumlah Notifikasi:"
                            android:fontFamily="@font/poppins_extrabold"
                            android:textSize="@dimen/list_subtitle_text"
                            android:textColor="@color/colorProcess"/>

                        <TextView
                            android:id="@+id/btn_dashboard_lihat_semua_pengumuman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Lihat Semua"
                            android:background="@drawable/ic_button_white_elevated"
                            android:fontFamily="@font/poppins_bold"
                            android:textAlignment="center" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Pemesananan dan Daftar Ulang"
                android:textSize="@dimen/card_title_text"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="@dimen/list_space"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:src="@drawable/img_announcement_card_dashboard"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_notifications_black_24dp"
                        app:tint="@android:color/white"
                        android:layout_marginEnd="@dimen/container_padding_x"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jumlah Pengumuman:"
                            android:fontFamily="@font/poppins_extrabold"
                            android:textSize="@dimen/list_subtitle_text"
                            android:textColor="@color/colorProcess"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jumlah Notifikasi:"
                            android:fontFamily="@font/poppins_extrabold"
                            android:textSize="@dimen/list_subtitle_text"
                            android:textColor="@color/colorProcess"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Lihat Semua"
                            android:background="@drawable/ic_button_white_elevated"
                            android:fontFamily="@font/poppins_bold"
                            android:textAlignment="center" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aktivitas"
                android:textSize="@dimen/card_title_text"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="@dimen/list_space"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:cardCornerRadius="@dimen/list_corner"
                app:cardElevation="4dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/container_padding_x"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_dashboard_aktivitas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
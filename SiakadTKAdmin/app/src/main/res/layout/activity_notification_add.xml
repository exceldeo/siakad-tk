<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.screens.notification.NotificationAddActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_height"
        android:paddingBottom="@dimen/appbar_padding_top"
        android:gravity="bottom">

        <include layout="@layout/item_toolbar"/>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/container_padding_x"
        android:paddingVertical="@dimen/container_padding_y"
        android:orientation="vertical">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="row">

            <Button
                android:id="@+id/btn_notification_add_siswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Siswa"
                android:layout_marginRight="@dimen/appbar_padding_top"
                android:textSize="@dimen/card_title_text"
                app:icon="@drawable/ic_name"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"/>

            <Button
                android:id="@+id/btn_notification_add_kelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/card_title_text"
                android:text="Kelas"
                app:icon="@drawable/ic_class_presentation"
                style="@style/Widget.MaterialComponents.Button.Icon"/>

        </com.google.android.flexbox.FlexboxLayout>

        <LinearLayout
            android:id="@+id/ll_notification_add_siswa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/sTitle"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:text="Nama Siswa"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/list_corner"
                    android:elevation="0dp"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorPrimaryLight"
                        android:layout_margin="1dp"
                        app:cardCornerRadius="@dimen/list_corner">

                        <AutoCompleteTextView
                            android:id="@+id/et_notification_add_nama_siswa"
                            android:padding="@dimen/input_text_padding"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nama Siswa"
                            android:background="@android:color/transparent"/>
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_notification_add_kelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/sTitle"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:text="Kelas"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/list_corner"
                    android:elevation="0dp"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorPrimaryLight"
                        android:layout_margin="1dp"
                        app:cardCornerRadius="@dimen/list_corner">

                        <AutoCompleteTextView
                            android:id="@+id/et_notification_add_nama_kelas"
                            android:padding="@dimen/input_text_padding"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nama Kelas"
                            android:background="@android:color/transparent"/>
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/sTitle"
            android:text="Judul Notifikasi"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/list_corner"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorPrimaryLight"
                android:layout_margin="1dp"
                app:cardCornerRadius="@dimen/list_corner">

                <EditText
                    android:id="@+id/et_notification_add_judul"
                    android:padding="@dimen/input_text_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Judul"
                    android:background="@android:color/transparent"/>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/sTitle"
            android:text="Isi Notifikasi"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="186dp"
            app:cardCornerRadius="@dimen/list_corner"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="186dp"
                app:cardBackgroundColor="@color/colorPrimaryLight"
                android:layout_margin="1dp"
                app:cardCornerRadius="@dimen/list_corner">

                <EditText
                    android:id="@+id/et_notification_add_isi"
                    android:padding="@dimen/input_text_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Isi Notifikasi"
                    android:background="@android:color/transparent"/>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/sTitle"
            android:text="Tanggal Notifikasi"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_notification_add_tanggal"
                android:layout_width="@dimen/card_title_ic_size"
                android:layout_height="@dimen/card_title_ic_size"
                android:src="@drawable/ic_baseline_calendar_today_24"
                android:layout_marginEnd="@dimen/container_padding_x"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/list_corner"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/colorPrimary">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorPrimaryLight"
                    android:layout_margin="1dp"
                    app:cardCornerRadius="@dimen/list_corner">

                    <EditText
                        android:id="@+id/et_notification_add_tanggal"
                        android:padding="@dimen/input_text_padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="08-11-2000"
                        android:background="@android:color/transparent"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ListTitle"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_notification_add_batal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:layout_marginEnd="@dimen/container_padding_x"
                app:cardCornerRadius="@dimen/list_corner"
                app:cardBackgroundColor="@color/colorUnSelect">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/container_padding_x"
                    android:text="Batal"
                    android:textColor="@android:color/white"
                    style="@style/CommonButton"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_notification_add_simpan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/list_corner"
                app:cardBackgroundColor="@color/colorPrimary">

                <TextView
                    style="@style/CommonButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/container_padding_x"
                    android:text="Simpan"
                    android:textColor="@android:color/white" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
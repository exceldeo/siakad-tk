<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="60dp"
        android:background="@color/colorPrimary"
        android:text="Detail Konfirmasi"
        android:gravity="bottom"
        android:textSize="@dimen/card_title_text"
        android:textColor="@android:color/white"
        android:padding="@dimen/appbar_padding_top"
        android:paddingStart="@dimen/container_padding_x"
        android:fontFamily="@font/poppins_semibold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/container_padding_x">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/sTitle"
            android:layout_marginTop="0dp"
            android:text="Tanggal Mulai"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_dialog_confirm_start_tanggal"
                android:layout_width="@dimen/card_title_ic_size"
                android:layout_height="@dimen/card_title_ic_size"
                android:src="@drawable/ic_baseline_calendar_today_24"
                android:layout_marginEnd="@dimen/container_padding_x"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/list_corner"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/colorPrimary">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorPrimaryLight"
                    android:layout_margin="1dp"
                    app:cardCornerRadius="@dimen/list_corner">

                    <EditText
                        android:id="@+id/et_dialog_confirm_start_tanggal"
                        android:padding="@dimen/input_text_padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="08-11-2000"
                        android:background="@android:color/transparent"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/sTitle"
            android:text="Tanggal Selesai"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_dialog_confirm_end_tanggal"
                android:layout_width="@dimen/card_title_ic_size"
                android:layout_height="@dimen/card_title_ic_size"
                android:src="@drawable/ic_baseline_calendar_today_24"
                android:layout_marginEnd="@dimen/container_padding_x"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/list_corner"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/colorPrimary">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorPrimaryLight"
                    android:layout_margin="1dp"
                    app:cardCornerRadius="@dimen/list_corner">

                    <EditText
                        android:id="@+id/et_dialog_confirm_end_tanggal"
                        android:padding="@dimen/input_text_padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="08-11-2000"
                        android:background="@android:color/transparent"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/container_padding_x"
        android:layout_gravity="end"
        android:gravity="end"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_dialog_uniform_add_batal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:layout_marginEnd="@dimen/container_padding_x"
            app:cardCornerRadius="@dimen/list_corner"
            app:cardBackgroundColor="@color/colorUnSelect">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/container_padding_x"
                android:text="Batal"
                android:textColor="@android:color/white"
                style="@style/CommonButton"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_dialog_uniform_add_tambahkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:cardCornerRadius="@dimen/list_corner"
            app:cardBackgroundColor="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/container_padding_x"
                android:text="Tambahkan"
                android:textColor="@android:color/white"
                style="@style/CommonButton"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
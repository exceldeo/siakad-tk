<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.screens.registration.detail.verified.RegistrationDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_height"
        android:gravity="bottom"
        android:paddingBottom="@dimen/appbar_padding_top">

        <include layout="@layout/item_toolbar" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/container_padding_x"
            android:paddingVertical="@dimen/container_padding_y">

            <TextView
                style="@style/mdTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Nama Lengkap"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_registration_detail_nama"
                style="@style/mdContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Namamu" />

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/mdTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kelas"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/tv_registration_detail_kelas"
                        style="@style/mdContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TK-B" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/mdTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jenis Kelamin"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/tv_registration_detail_jenkel"
                        style="@style/mdContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perempuan" />
                </LinearLayout>
            </com.google.android.flexbox.FlexboxLayout>

            <TextView
                style="@style/mdTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Wali"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_registration_detail_wali"
                style="@style/mdContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Wali" />

            <TextView
                style="@style/mdTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_registration_detail_alamat"
                style="@style/mdContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jalan Terserah" />

            <TextView
                style="@style/mdTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Handphone"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_registration_detail_nohp"
                style="@style/mdContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="089112345678" />

            <TextView
                style="@style/mdTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nominal Pembayaran"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_registration_detail_nobayar"
                style="@style/mdContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 1210293" />


            <TextView
                style="@style/mdTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bukti Pembayaran"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary" />

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_registration_detail_buktibayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="@dimen/list_corner">

                <TextView
                    style="@style/CommonButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/container_padding_x"
                    android:text="Lihat Bukti"
                    android:textColor="@android:color/white" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
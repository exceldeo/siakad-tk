<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.registration.RegistrationDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_height"
        android:paddingBottom="@dimen/appbar_padding_top"
        android:gravity="bottom">

        <include layout="@layout/item_toolbar"/>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_above="@id/v_gudieline">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/container_padding_x"
                android:paddingVertical="@dimen/container_padding_y">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Lengkap"
                    style="@style/mdTitle"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/tv_registration_detail_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Namamu"
                    style="@style/mdContent"/>

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flexDirection="row">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kelas"
                            style="@style/mdTitle"
                            android:textColor="@color/colorPrimary"/>

                        <TextView
                            android:id="@+id/tv_registration_detail_kelas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TK-B"
                            style="@style/mdContent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jenis Kelamin"
                            style="@style/mdTitle"
                            android:textColor="@color/colorPrimary"/>

                        <TextView
                            android:id="@+id/tv_registration_detail_jenkel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Perempuan"
                            style="@style/mdContent"/>
                    </LinearLayout>
                </com.google.android.flexbox.FlexboxLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Wali"
                    style="@style/mdTitle"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/tv_registration_detail_wali"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Wali"
                    style="@style/mdContent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    style="@style/mdTitle"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/tv_registration_detail_alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jalan Terserah"
                    style="@style/mdContent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No. Handphone"
                    style="@style/mdTitle"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/tv_registration_detail_nohp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="089112345678"
                    style="@style/mdContent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nominal Pembayaran"
                    style="@style/mdTitle"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/tv_registration_detail_nobayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 1210293"
                    style="@style/mdContent"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bukti Pembayaran"
                    style="@style/mdTitle"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_registration_detail_buktibayar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    app:cardCornerRadius="@dimen/list_corner"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/container_padding_x"
                        android:text="Lihat Bukti"
                        android:textColor="@android:color/white"
                        style="@style/CommonButton"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <View
            android:id="@+id/v_gudieline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/cv_registration_detail"
            android:background="@android:color/darker_gray" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_registration_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="28dp"
            app:cardCornerRadius="@dimen/list_corner"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ListTitle"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/container_padding_x"
                android:layout_marginBottom="@dimen/container_padding_y">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_registration_detail_batal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:layout_marginEnd="@dimen/container_padding_x"
                    app:cardCornerRadius="@dimen/list_corner"
                    app:cardBackgroundColor="@color/colorDanger">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/container_padding_x"
                        android:text="Tolak"
                        android:textColor="@android:color/white"
                        style="@style/CommonButton"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_registration_detail_simpan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    app:cardCornerRadius="@dimen/list_corner"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/container_padding_x"
                        android:text="Verifikasi"
                        android:textColor="@android:color/white"
                        style="@style/CommonButton"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_list_tower"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_space">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/list_corner"
        app:cardElevation="0dp"
        card_view:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/container_padding_x">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_item_product_img"
                android:layout_width="@dimen/list_grid_img_size"
                android:layout_height="@dimen/list_grid_img_size"
                android:src="@drawable/example_image"
                app:riv_corner_radius="10dip"/>
            
            <TextView
                android:id="@+id/tv_item_product_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/inner_padding"
                android:text="@string/product_xxx"
                android:textSize="@dimen/card_desc_text"
                android:fontFamily="@font/poppins_medium"/>

            <TextView
                android:id="@+id/tv_item_product_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/product_xxx"
                android:textSize="@dimen/list_status_text"
                android:textColor="@color/colorSuccess"
                android:fontFamily="@font/poppins_regular"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hingga"
                    android:textSize="@dimen/list_status_text"
                    android:fontFamily="@font/poppins_regular"/>
                <TextView
                    android:id="@+id/tv_item_product_deadline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/inner_padding"
                    android:text="@string/example_date"
                    android:textSize="@dimen/list_status_text"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>
        </LinearLayout>

        

    </androidx.cardview.widget.CardView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".WelcomeScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/iv_login_logo"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:scaleType="centerInside"
            android:layout_marginBottom="@dimen/container_padding_x"
            android:src="@drawable/ic_logo" />

        <TextView
            android:id="@+id/tv_alogin_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_text_app"
            android:textSize="@dimen/header_subtitle_text"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="@dimen/container_padding_y_min"/>

        <TextView
            android:id="@+id/tv_alogin_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_desc_text"
            android:textSize="@dimen/list_desc_text"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:layout_marginBottom="@dimen/container_padding_y_min"/>

        <TextView
            android:id="@+id/tv_alogin_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prosedur_pendaftaran"
            android:textSize="@dimen/list_subtitle_text"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="@dimen/padding_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/container_padding_x"
            android:background="@drawable/fill_input"
            android:padding="@dimen/container_padding_x"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ahistory_detail_desc_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/panduan"
                android:textSize="@dimen/list_desc_text"
                tools:targetApi="lollipop" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_list_tower"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_space">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/list_corner"
        app:cardElevation="0dp"
        card_view:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/container_padding_x">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_product_img_produk"
                android:layout_width="@dimen/list_grid_img_size"
                android:layout_height="@dimen/list_grid_img_size"
                android:src="@drawable/ic_book"
                app:riv_corner_radius="10dip"/>
            
            <TextView
                android:id="@+id/tv_product_jenis_produk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="@dimen/inner_padding"
                android:text="@string/buku"
                android:textSize="@dimen/card_title_text"
                android:fontFamily="@font/poppins_medium"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
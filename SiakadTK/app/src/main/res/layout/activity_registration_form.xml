<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationFormActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_aannouncement_header">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/vc_toolbar_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/container_padding_x"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/container_padding_x"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView
                android:id="@+id/tv_aregistrationform_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/form_daftar_ulang"
                android:layout_marginStart="@dimen/list_space"
                android:textSize="@dimen/header_title_text"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_semibold" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/DefaultMargin"
        android:layout_below="@id/rv_aannouncement_header"
        android:layout_marginTop="@dimen/container_padding_x">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/InputText"
            android:text="@string/nama"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/input_corner"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_marginBottom="@dimen/input_space"
            tools:targetApi="lollipop">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="@dimen/input_corner">

                <EditText
                    android:id="@+id/et_aregistrationform_add_nama"
                    android:padding="@dimen/input_text_padding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/masukkan_nama"
                    style="@style/InputText"
                    android:background="@android:color/transparent"/>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/InputText"
            android:text="@string/jenis_kelamin"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/input_corner"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_marginBottom="@dimen/input_space"
            tools:targetApi="lollipop">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="@dimen/input_corner">

                <EditText
                    android:id="@+id/et_aregistrationform_add_jk"
                    android:padding="@dimen/input_text_padding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/jenis_kelamin"
                    style="@style/InputText"
                    android:background="@android:color/transparent"/>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/InputText"
            android:text="@string/nama_orang_tua"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/input_corner"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_marginBottom="@dimen/input_space"
            tools:targetApi="lollipop">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="@dimen/input_corner">

                <EditText
                    android:id="@+id/et_aregistrationform_add_nama_ortu"
                    android:padding="@dimen/input_text_padding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/masukkan_nama"
                    style="@style/InputText"
                    android:background="@android:color/transparent"/>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_registration_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="28dp"
        app:cardCornerRadius="@dimen/list_corner"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ListTitle"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/container_padding_x"
            android:layout_marginBottom="@dimen/container_padding_y">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_registration_detail_batal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:layout_marginEnd="@dimen/container_padding_x"
                app:cardCornerRadius="@dimen/list_corner"
                app:cardBackgroundColor="@color/colorUnSelect">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/container_padding_x"
                    android:text="@string/batal"
                    android:textColor="@android:color/white"
                    style="@style/CommonButton"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_registration_detail_simpan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/list_corner"
                app:cardBackgroundColor="@color/colorPrimary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/container_padding_x"
                    android:text="Daftar"
                    android:textColor="@android:color/white"
                    style="@style/CommonButton"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
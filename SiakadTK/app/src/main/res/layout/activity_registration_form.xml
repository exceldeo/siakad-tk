<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationFormActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_registrationform_header">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/vc_toolbar_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/container_padding_x"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/container_padding_x"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibtn_registrationform_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/form_daftar_ulang"
                android:layout_marginStart="@dimen/list_space"
                android:textSize="@dimen/header_title_text"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_semibold" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_registrationform_header">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp"
            style="@style/DefaultMargin">

            <TextView
                style="@style/LabelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nama" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/inner_padding"
                android:layout_height="@dimen/input_height">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/vc_bg_input_unfilled"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="10dip"/>
                <EditText
                    android:id="@+id/et_registrationform_nama"
                    android:padding="@dimen/input_text_padding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/masukkan_nama"
                    style="@style/InputText"
                    android:background="@android:color/transparent"/>
            </RelativeLayout>

            <TextView
                style="@style/LabelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tanggal_lahir" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/inner_padding"
                android:layout_height="@dimen/input_height">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/vc_bg_input_unfilled"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="10dip"/>
                <EditText
                    android:id="@+id/et_registrationform_ttl"
                    android:padding="@dimen/input_text_padding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/example_date"
                    style="@style/InputText"
                    android:background="@android:color/transparent"/>
            </RelativeLayout>

            <TextView
                style="@style/LabelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/asal_sekolah" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/inner_padding"
                android:layout_height="@dimen/input_height">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/vc_bg_input_unfilled"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="10dip"/>
                <EditText
                    android:id="@+id/et_registrationform_asal_sekolah"
                    android:padding="@dimen/input_text_padding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/asal_sekolah"
                    style="@style/InputText"
                    android:background="@android:color/transparent"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/inner_padding"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/inner_padding"
                        android:text="@string/jenis_kelamin"
                        android:textSize="@dimen/list_desc_text"
                        android:fontFamily="@font/poppins_regular"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/inner_padding"
                        android:layout_height="@dimen/input_height">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/vc_bg_input_unfilled"
                            android:scaleType="fitXY"
                            app:riv_corner_radius="10dip"/>
                        <Spinner
                            android:id="@+id/sp_registrationform_jenis_kelamin"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/input_height"
                            android:paddingStart="@dimen/inner_padding"
                            android:theme="@style/InputText"
                            android:entries="@array/list_jenis_kelamin"
                            android:spinnerMode="dropdown"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/inner_padding"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/inner_padding"
                        android:text="@string/kelas"
                        android:textSize="@dimen/list_desc_text"
                        android:fontFamily="@font/poppins_regular"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/inner_padding"
                        android:layout_height="@dimen/input_height">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/vc_bg_input_unfilled"
                            android:scaleType="fitXY"
                            app:riv_corner_radius="10dip"/>
                        <Spinner
                            android:id="@+id/sp_registrationform_kelas"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/input_height"
                            android:paddingStart="@dimen/inner_padding"
                            android:theme="@style/InputText"
                            android:entries="@array/list_kelas"
                            android:spinnerMode="dropdown"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/inner_padding"
                style="@style/LabelText"
                android:text="@string/nama_orang_tua"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/inner_padding"
                android:layout_height="@dimen/input_height">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/vc_bg_input_unfilled"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="10dip"/>
                <EditText
                    android:id="@+id/et_registrationform_nama_ortu"
                    android:padding="@dimen/input_text_padding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/masukkan_nama"
                    style="@style/InputText"
                    android:background="@android:color/transparent"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/inner_padding"
                style="@style/LabelText"
                android:text="@string/alamat"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/inner_padding"
                android:layout_height="@dimen/input_height">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/vc_bg_input_unfilled"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="10dip"/>
                <EditText
                    android:id="@+id/et_registrationform_alamat"
                    android:padding="@dimen/input_text_padding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/alamat"
                    style="@style/InputText"
                    android:background="@android:color/transparent"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/inner_padding"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/inner_padding"
                        android:text="@string/no_hp_orang_tua"
                        android:textSize="@dimen/list_desc_text"
                        android:fontFamily="@font/poppins_regular"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/inner_padding"
                        android:layout_height="@dimen/input_height">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/vc_bg_input_unfilled"
                            android:scaleType="fitXY"
                            app:riv_corner_radius="10dip"/>
                        <EditText
                            android:id="@+id/et_registrationform_no_hp_ortu"
                            android:padding="@dimen/input_text_padding"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/example_nohp"
                            style="@style/InputText"
                            android:background="@android:color/transparent"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/inner_padding"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/inner_padding"
                        android:text="@string/tahun_ajaran"
                        android:textSize="@dimen/list_desc_text"
                        android:fontFamily="@font/poppins_regular"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/inner_padding"
                        android:layout_height="@dimen/input_height">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/vc_bg_input_unfilled"
                            android:scaleType="fitXY"
                            app:riv_corner_radius="10dip"/>
                        <Spinner
                            android:id="@+id/sp_registrationform_tahun_ajaran"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/input_height"
                            android:paddingStart="@dimen/inner_padding"
                            android:theme="@style/InputText"
                            android:entries="@array/list_ajaran"
                            android:spinnerMode="dropdown"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/inner_padding"
                style="@style/LabelText"
                android:text="@string/unggah_bukti_pembayaran"/>
            <Button
                android:id="@+id/btn_registrationform_upload_bukti_bayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/container_padding_x"
                android:background="@drawable/fill_upload_img"
                android:gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/unggah_bukti_pembayaran"
                android:layout_marginBottom="@dimen/container_double_padding_y"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="28dp"
        app:cardCornerRadius="@dimen/list_corner"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ListTitle"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/container_padding_x"
            android:layout_marginBottom="@dimen/container_padding_y">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:layout_marginEnd="@dimen/container_padding_x"
                app:cardCornerRadius="@dimen/list_corner"
                app:cardBackgroundColor="@color/colorUnSelect">

                <TextView
                    android:id="@+id/btn_registrationform_batal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/container_padding_x"
                    android:text="@string/batal"
                    android:textColor="@android:color/white"
                    style="@style/CommonButton"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/list_corner"
                app:cardBackgroundColor="@color/colorPrimary">

                <TextView
                    android:id="@+id/btn_registrationform_simpan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/container_padding_x"
                    android:text="Daftar"
                    android:textColor="@android:color/white"
                    style="@style/CommonButton"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
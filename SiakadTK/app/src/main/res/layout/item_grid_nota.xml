<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_list_tower"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_space">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/list_corner"
        app:cardElevation="0dp"
        card_view:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/container_padding_x">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/inner_padding"
                android:text="@string/nota_pemesanan"
                android:textSize="@dimen/card_title_text"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/poppins_semibold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/product_xxx"
                android:textSize="@dimen/card_subtitle_text"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/poppins_semibold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/until_date"
                android:textSize="@dimen/card_desc_text"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
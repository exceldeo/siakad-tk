<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/container_padding_x"
    android:orientation="vertical"
    tools:context=".presentation.screens.register.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:scaleType="centerInside"
                android:layout_marginBottom="@dimen/container_padding_x"
                android:src="@drawable/ic_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_text_app"
                android:textSize="@dimen/header_subtitle_text"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="@dimen/container_padding_x"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginBottom="@dimen/container_padding_x">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/vc_bg_input_unfilled"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="10dip"/>
                <EditText
                    android:id="@+id/edt_signup_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:hint="@string/nama"
                    android:inputType="textEmailAddress"
                    android:drawableStart="@drawable/ic_name"
                    android:background="@android:color/transparent"
                    style="@style/InputText.EdtTextNoMargin"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginBottom="@dimen/container_padding_x">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/vc_bg_input_unfilled"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="10dip"/>
                <EditText
                    android:id="@+id/et_signup_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:drawableStart="@drawable/ic_mail"
                    android:background="@android:color/transparent"
                    style="@style/InputText.EdtTextNoMargin"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginBottom="@dimen/container_padding_x">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/vc_bg_input_unfilled"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="10dip"/>
                <EditText
                    android:id="@+id/et_signup_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:drawableStart="@drawable/ic_lock"
                    android:background="@android:color/transparent"
                    style="@style/InputText.EdtTextNoMargin"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginBottom="@dimen/container_padding_x">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/vc_bg_input_unfilled"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="10dip"/>
                <EditText
                    android:id="@+id/et_signup_repeat_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/ulangi_password"
                    android:inputType="textPassword"
                    android:drawableStart="@drawable/ic_lock"
                    android:background="@android:color/transparent"
                    style="@style/InputText.EdtTextNoMargin"/>
            </FrameLayout>

            <Button
                android:id="@+id/btn_signup_upload_bukti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_text"
                android:background="@drawable/fill_upload_img"
                android:gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/unggah_bukti_pembayaran"
                android:layout_marginBottom="@dimen/container_double_padding_y"/>

            <Button
                android:id="@+id/btn_signup_daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/daftar"
                style="@style/CommonButton"
                android:textColor="@android:color/white"
                android:background="@drawable/fill_primary_button"
                android:layout_marginTop="@dimen/container_padding_x" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/container_double_padding_y"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_text"
                    android:gravity="center_horizontal|bottom"
                    android:text="@string/sudah_mempunyai_akun"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/btn_signup_masuk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_text"
                    android:gravity="center_horizontal|bottom"
                    android:text="@string/masuk"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="64dp"
                android:visibility="gone"  />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_list_tower"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_space">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/list_corner"
        app:cardElevation="0dp"
        card_view:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/container_padding_x">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/list_view_img_size"
                android:layout_height="@dimen/list_view_img_size"
                android:src="@drawable/example_image"
                android:layout_gravity="center_vertical"
                app:riv_corner_radius="25dip"/>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/list_space">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/inner_padding"
                    android:text="@string/product_xxx"
                    android:textSize="@dimen/list_title_text"
                    android:fontFamily="@font/poppins_semibold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/product_xxx"
                    android:textSize="@dimen/list_desc_text"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/example_desc_basket_1"
                    android:textSize="@dimen/list_status_text"
                    android:fontFamily="@font/poppins_regular"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/example_desc_basket_2"
                    android:textSize="@dimen/list_status_text"
                    android:fontFamily="@font/poppins_regular"/>


            </LinearLayout>

        </LinearLayout>

        

    </androidx.cardview.widget.CardView>
</RelativeLayout>
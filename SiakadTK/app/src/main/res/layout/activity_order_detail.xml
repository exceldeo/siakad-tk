<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.order.OrderDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_aorder_detail_header">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/vc_toolbar_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/container_padding_x"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/container_padding_x"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView
                android:id="@+id/tv_aannouncement_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_nota"
                android:layout_marginStart="@dimen/list_space"
                android:textSize="@dimen/header_title_text"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_semibold" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_aorder_detail_header"
        android:paddingStart="@dimen/container_padding_x"
        android:paddingEnd="@dimen/container_padding_x">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_aorder_nota_title"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_marginTop="@dimen/container_padding_x"
                android:layout_height="0dp"
                android:text="@string/nota_pemesanan"
                android:textSize="@dimen/header_subtitle_text"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="@dimen/container_padding_x"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fill_input"
                android:padding="@dimen/container_padding_x"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:id="@+id/tv_aorder_tglorder_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/tanggal_pesan"
                        android:layout_weight="2"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/list_desc_text" />
                    <TextView
                        android:id="@+id/tv_aorder_tglorder_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/example_date"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="@dimen/list_desc_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:id="@+id/tv_aorder_tglsetuju_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/tanggal_pesananan_disetujui"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="2"
                        android:textSize="@dimen/list_desc_text" />
                    <TextView
                        android:id="@+id/tv_aorder_tglsetuju_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/example_date"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="@dimen/list_desc_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:id="@+id/tv_aorder_tglbayar_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/tanggal_pesanan_dibayar"
                        android:layout_weight="2"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/list_desc_text" />
                    <TextView
                        android:id="@+id/tv_aorder_tglbayar_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/example_date"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="@dimen/list_desc_text" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/container_padding_x"
                android:background="@drawable/fill_input"
                android:padding="@dimen/container_padding_x"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_aorder_detail_title_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/status_pemesanan"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/list_title_text"
                    tools:targetApi="lollipop" />

                <TextView
                    android:id="@+id/tv_aorder_detail_desc_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/terverivikasi_dan_menunggu_pembayaran"
                    android:textSize="@dimen/list_desc_text"
                    tools:targetApi="lollipop" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/container_padding_x"
                    android:background="@drawable/fill_upload_img"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/unggah_bukti_pembayaran"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/container_padding_x"
                android:background="@drawable/fill_input"
                android:padding="@dimen/container_padding_x"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_aorder_detail_title_detail_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/detail_pemesanan"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/list_title_text"
                    tools:targetApi="lollipop"/>

                <ListView
                    android:layout_marginTop="@dimen/container_padding_x"
                    android:id="@+id/rv_aorder_product_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/item_row_product_item" />

                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/inner_padding"
                    android:layout_height="1dp"
                    android:background="@color/colorUnSelect"/>


                <TextView
                    android:id="@+id/tv_subitem_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginTop="@dimen/inner_padding"
                    android:textSize="@dimen/list_subtitle_text"
                    android:lines="1"
                    android:fontFamily="@font/poppins_regular"
                    tools:text="@string/example_sum_price"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>